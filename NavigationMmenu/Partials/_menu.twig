<ul>
  {% for item in items %}
  <li class="item {{- item.current ? ' current-menu-item' }}">
    <a class="link" href="{{ item.link|e('esc_url') }}" {{- item.is_external or item.is_target_blank ? ' target="_blank" rel="noopener noreferrer"' -}}>{{ item.title }}</a>
    {% if item.children %}
      <ul>
      {# Children needs work I suspect! #}
        {% for child in item.children %}
          <li  class="menu-item{{ child.classes|join(' ') }}">
            <a href="{{ child.link|e('esc_url') }}">{{ child.title }}</a>
            {# Third level #}
            {% if child.children %}
              <ul>
                {% for grandchild in child.children %}
                  <li  class="menu-item{{ grandchild.classes|join(' ') }}">
                    <a href="{{ grandchild.link|e('esc_url') }}">{{ grandchild.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </li>
  {% endfor %}
</ul>
